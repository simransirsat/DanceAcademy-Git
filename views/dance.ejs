<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Dancer</title>

  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <link href="/stylesheets/dance.css" rel="stylesheet">
  <link href="/stylesheets/jquery-ui.min.css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <script src="/javascripts/jquery-ui.min.js"></script>
  <script>
    $(document).ready(function () {
      $("#hide").click(function () {
        $(".updating").hide();
      });
      $("#show").click(function () {
        $(".updating").show();
      });

      $( function() {
        $( "#datepicker" ).datepicker({
          dateFormat: "yy-mm-dd"
        });
      } );
      // $.datepicker.setDefaults({
      //   showOn: "both",
      //   buttonImageOnly: true,
      //   buttonImage: "calendar.gif",
      //   buttonText: "Calendar"
      // });
    });
  </script>
</head>

<body>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Step Up Dance Academy</h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="/studio" method="post">Studios</a>
      <a class="p-2 text-dark" href="/dance" method="post">Dancers</a>
      <a class="p-2 text-dark" href="/choreo" method="post">Choreographers</a>
      <a class="p-2 text-dark" href="/courses" method="post">Courses</a>
      <!-- <a class="p-2 text-dark" action="/exam" method="post">Exams</a> -->
    </nav>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header border-0">
            <!-- <h5 class="modal-title" id="exampleModalLabel">Add new Dancer</h5> -->
            <button type="button" class="close px-3 pt-3 pb-0 " data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="py-4 mb-3 text-center">
              <div class="card mb-4 shadow-sm">
                <div class="card-header">
                  <h4 class="my-0 font-weight-normal">Add a new Student</h4>
                </div>
                <div class="card-body">
                  <h1 class="card-title pricing-card-title">Details <small class="text-muted"> /New</small></h1>
                  <ul class="list-unstyled mt-3 mb-4">
                    <form action="/dance" method="post">
                      <li><input type="text" name="addName" class="form-control mb-2" placeholder="Name" required></li>
                      <li><input type="text" name="addDOB" class="form-control mb-2" placeholder="DOB" id="datepicker" required></li>
                      <li class="mb-2"><select class="form-control" name="addSex">
                          <option value="" selected disabled hidden>Gender</option>
                          <option value="F">Female</option>
                          <option value="M">Male</option>
                          <option value="T">Transgender</option>
                      </select></li>
                      <li class="mb-2"><select class="form-control" name="addForm">
                          <option value="" selected disabled hidden>Dance Form</option>
                          <option value="Salsa">Salsa</option>
                          <option value="Freestyle">Freestyle</option>
                          <option value="Hip-Hop">Hip-Hop</option>
                          <option value="Bollywood">Bollywood</option>
                          <option value="Bachata">Bachata</option>
                          <option value="Tango">Tango</option>
                          <option value="Kathak">Kathak</option>
                          <option value="Others">Others</option>
                      </select></li>
                      <!-- <div class="dropdown">
                          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Gender
                          <span class="caret"></span></button>
                          <ul class="dropdown-menu">
                            <li>M</li>
                            <li>F</li>
                            <li>T</li>
                          </ul>
                        </div> -->

                      <!-- <li><input type="text" name="addSex" class="form-control mb-2" placeholder="Sex" required></li> -->
                      <!-- <li><input type="text" name="addForm" class="form-control mb-2" placeholder="Form" required></li> -->
                      <button type="submit" class="add btn btn-lg btn-block btn-outline-primary">Add</button>
                    </form>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Dancers</h1>
    <p class="lead">The Very Talented Students at our Studio.</p>
  </div>

  <div class="container">
    <div class="row">

      <div class="d-flex flex-row-reverse mb-3 open-popup col-12">
          <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#exampleModal">
              Add
          </button>
      </div>

      <ul class="list-unstyled heads list-group d-flex flex-column flex-md-row">
        <li class="form-control">Id</li>
        <li class="form-control">Name</li>
        <li class="form-control">Sex</li>
        <li class="form-control">DOB</li>
        <li class="form-control">Form</li>
      </ul>
    </div>

    <div class="">
      <%if(dancers.length>0){%>
      <% (i=1) %>
      <%for(let dan of dancers){%>
      <ul class="list-unstyled list-group d-flex flex-column flex-md-row">
        <li class="form-control"><%= i++ %></li>
        <li class="form-control"><%= dan.Dname %></li>
        <li class="form-control"><%= dan.Sex %></li>
        <li class="form-control">
          <%= new Date(dan.DOB).getFullYear() %>/<%= new Date(dan.DOB).getMonth() %>/<%= new Date(dan.DOB).getDate() %>
        </li>
        <li class="form-control"><%= dan.Dform %></li>
        <!-- <li><button type="submit" id="show" class="btn btn-lg btn-block btn-outline-primary">Update</button></li> -->
        <li><button type="submit" onclick="window.location.href='/deldancer/<%= dan.Did %>' "
            class="btn btn-lg btn-block btn-outline-primary">Delete</button></li>
        <!-- onclick="window.location.href='/dance?category=<%= dan.Did %>' " -->
      </ul>
      <%}%>
      <%}%>
    </div>

    <!-- <div class="mb-4 updating">
        <ul class="list-unstyled list-group d-flex flex-column flex-md-row align-items-center">
          <li><input type="text" id="updateId" class="form-control" placeholder="Id" required></li>
          <li><input type="text" id="updateName" class="form-control" placeholder="Name" required></li>
          <li><input type="text" id="updateDOB" class="form-control" placeholder="DOB" required></li>
          <li><input type="text" id="updateSex" class="form-control" placeholder="Sex" required></li>
          <li><input type="text" id="updateForm" class="form-control" placeholder="Form" required></li>
          <li><button type="button" class="btn btn-lg btn-block btn-outline-primary">Update</button></li>
        </ul>
      </div> -->
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md">
          <img class="mb-2" src="/images/icons8-party-64.png" alt="" width="24" height="24">
          <small class="d-block mb-3 text-muted">&copy; 2019-2020</small>
        </div>
        <div class="col-6 col-md">
          <h5>Network</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Foot Notes</a></li>
            <li><a class="text-muted" href="#">Our Achievers</a></li>
            <li><a class="text-muted" href="#">Appearances</a></li>
            <li><a class="text-muted" href="#">Awards</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>Courses</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Comtemporary</a></li>
            <li><a class="text-muted" href="#">Classical</a></li>
            <li><a class="text-muted" href="#">Western</a></li>
            <li><a class="text-muted" href="#">Find all courses</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>About</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Team</a></li>
            <li><a class="text-muted" href="#">Locations</a></li>
            <li><a class="text-muted" href="#">Privacy</a></li>
            <li><a class="text-muted" href="#">Contact Us</a></li>
            <li><a class="text-muted" href="#">Terms</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</body>

</html>