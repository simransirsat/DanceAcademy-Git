<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dancer</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
                integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
                crossorigin="anonymous">

    <link href="/stylesheets/dance.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
      $(document).ready(function(){
        $("#hide").click(function(){
          $(".updating").hide();
        });
         $("#show").click(function(){
          $(".updating").show();
        });
      });
    </script>
  </head>
  <body>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Step Up Dance Academy</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <a class="p-2 text-dark" href="/studio" method="post">Studios</a>
    <a class="p-2 text-dark" href="/dance" method="post">Dancers</a>
    <a class="p-2 text-dark" href="/choreo" method="post">Choreographers</a>
    <a class="p-2 text-dark" href="/courses" method="post">Courses</a>
    <!-- <a class="p-2 text-dark" action="/exam" method="post">Exams</a> -->
  </nav>
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Choreographers</h1>
  <p class="lead">The Very Talented Teachers at our Studio.</p>
</div>

<div class="container">
    <div class="">
      <ul class="list-unstyled heads list-group d-flex flex-column flex-md-row">
        <li class="form-control">Id</li>
        <li class="form-control">Name</li>
        <li class="form-control">Form</li>
        <li class="form-control">Salary</li>
      </ul>
    </div>

    <div class="">
        <%if(choreos.length>0){%>
          <%for(let cho of choreos){%>
            <ul class="list-unstyled list-group d-flex flex-column flex-md-row">
                <li class="form-control"><%= cho.Cid %></li>
                <li class="form-control"><%= cho.Cname %></li>
                <li class="form-control"><%= cho.Cform %></li>
                <li class="form-control"><%= cho.Salary %></li>
                <li><button type="submit" onclick="window.location.href='/delchoreo/<%= cho.Cid %>' " class="btn btn-lg btn-block btn-outline-primary">Delete</button></li>
              </ul>
            <%}%>
        <%}%>
    </div>

      
  
  <div class="py-4 card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Add a new Student</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">Details <small class="text-muted"> /New</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
    <form action="/choreo" method="post">
      <li><input type="number" name="addIdC" class="form-control" placeholder="Id" required></li>
      <li><input type="text" name="addNameC" class="form-control" placeholder="Name" required></li>
      <li><input type="text" name="addFormC" class="form-control" placeholder="Form" required></li>
      <li><input type="number" name="addSalaryC" class="form-control" placeholder="Salary" required></li>
      
      <button type="submit" class="add btn btn-lg btn-block btn-outline-primary" >Add</button>
    </form>
        </ul>
      </div>
    </div>
  </div>
    
  

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="/images/icons8-party-64.png" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted">&copy; 2019-2020</small>
      </div>
      <div class="col-6 col-md">
        <h5>Network</h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="#">Foot Notes</a></li>
          <li><a class="text-muted" href="#">Our Achievers</a></li>
          <li><a class="text-muted" href="#">Appearances</a></li>
          <li><a class="text-muted" href="#">Awards</a></li>
        </ul>
      </div>
      <div class="col-6 col-md">
        <h5>Courses</h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="#">Comtemporary</a></li>
          <li><a class="text-muted" href="#">Classical</a></li>
          <li><a class="text-muted" href="#">Western</a></li>
          <li><a class="text-muted" href="#">Find all courses</a></li>
        </ul>
      </div>
      <div class="col-6 col-md">
        <h5>About</h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="#">Team</a></li>
          <li><a class="text-muted" href="#">Locations</a></li>
          <li><a class="text-muted" href="#">Privacy</a></li>
          <li><a class="text-muted" href="#">Contact Us</a></li>
          <li><a class="text-muted" href="#">Terms</a></li>
        </ul>
      </div>
    </div>
  </footer>
</div>
</body>
</html>